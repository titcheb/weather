<%- include("partials/header.ejs") %>
  <div class="container bgimg">
    <div class="shadow">
      <div class="row text-center text-white-50">


      </div>

      <div class="main">
        <div class="forecasttitle">
          <h2>Vädret i <%=locals.country%>
          </h2><br>
          <form action="/" method="post">
            <div class="search">
              <input type="text" class="form-control border-dark mx-4 mx-md-3" name="City" placeholder="Stad">
              <button type="submit" class="btn bg-dark bg-opacity-70"><svg xmlns="http://www.w3.org/2000/svg" width="16"
                  height="16" fill="white" class="bi bi-search" viewBox="0 0 16 16">
                  <path
                    d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                </svg></button>
            </div>

          </form>
          <br>
          <div class="main-card">

            <% if(locals.image) {%>
              <div class="card">


                <img src="<%=locals.image%>" alt="" width="64px" height="64px" />
                <p>
                <p class="condition">
                  <%=locals.condition %>
                </p>
                </p>

                <p class="feelslike">Feels like <%=locals.feelslike%>°</p>

                </p>
                <p class="temperatur">
                  <%=locals.temperatur%>°
                </p>

              </div>

              <%}%>
          </div>
        </div>

      </div>
    </div>
  </div>
  <%- include("partials/footer.ejs") %>